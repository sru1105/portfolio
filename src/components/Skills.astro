---
import Section from "./Section.astro";
import type { SkillsProps } from "@types";

interface Props {
  skills: SkillsProps;
}

const { skills } = Astro.props;
---

<Section text="Skills" href="skills">
  <div class="flex flex-col gap-8">
    {
      skills.categories.map(({ name, items }) => (
        <div>
          <h3 class="mb-4 font-serif text-xl font-semibold text-primary">
            {name}
          </h3>
          <div class="flex flex-wrap gap-2">
            {items.map((skill) => (
              <span class="rounded-md bg-neutral/10 px-3 py-1.5 text-sm text-neutral">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</Section>

