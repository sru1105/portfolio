---
import Section from "./Section.astro";
import type { EducationProps } from "@types";

interface Props {
  education: EducationProps[];
}

const { education } = Astro.props;
---

<Section text="Education" href="education">
  <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
    {
      education.map(({ institution, degree, specialization, startDate, endDate, coursework, summary }) => (
        <div class="mb-10">
          <h3 class="mb-1.5 font-serif text-2xl font-semibold text-black">
            {institution}
          </h3>
          <div class="flex flex-col items-start pb-5">
            <h4 class="mb-0.5 font-serif text-2xl font-medium text-primary">
              {degree}
            </h4>
            {specialization && (
              <p class="mb-1 text-base text-neutral">{specialization}</p>
            )}
            <span class="pb-[2px] text-sm text-neutral">
              {startDate} â€” {endDate}
            </span>
          </div>
          {coursework && coursework.length > 0 && (
            <div class="mb-3">
              <p class="mb-2 font-medium text-primary">Coursework:</p>
              <ul class="list-disc pl-6">
                {coursework.map((course) => (
                  <li class="mb-2 text-base text-neutral">
                    {course}
                  </li>
                ))}
              </ul>
            </div>
          )}
          {summary && (
            Array.isArray(summary) ? (
              <ul class="list-none">
                {summary.map((log) => (
                  <li class="relative mb-3 pl-8 text-base text-neutral before:absolute before:top-1 before:left-0 before:content-[url(/check.svg)]">
                    {log}
                  </li>
                ))}
              </ul>
            ) : (
              <p class="text-base text-neutral">{summary}</p>
            )
          )}
        </div>
      ))
    }
  </div>
</Section>

